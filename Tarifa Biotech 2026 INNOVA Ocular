<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Comercial Innova Ocular 2026</title>
    <!-- Tailwind CSS para el diseño -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- React y ReactDOM -->
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <!-- Babel para procesar JSX en el navegador -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <!-- Recharts para los gráficos -->
    <script src="https://unpkg.com/recharts/umd/Recharts.js"></script>
    <!-- Lucide para los iconos -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .recharts-responsive-container { min-height: 250px; }
    </style>
</head>
<body class="bg-slate-50 text-slate-900">
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useMemo, useEffect } = React;
        const { 
            BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, ResponsiveContainer, Cell
        } = Recharts;

        // Iconos de Lucide (Carga manual para CDN)
        const Icon = ({ name, size = 20, className = "" }) => {
            useEffect(() => {
                if (window.lucide) {
                    window.lucide.createIcons();
                }
            }, [name]);
            return <i data-lucide={name} style={{ width: size, height: size }} className={className}></i>;
        };

        const App = () => {
            const [activeTab, setActiveTab] = useState('overview');
            const [simulatedSales, setSimulatedSales] = useState(750000);

            // Datos extraídos de tus imágenes
            const objectives = [
                { label: 'Lentes Pseudofáquicas', total: 26500, goal: 2500, color: '#3b82f6', icon: 'target' },
                { label: 'Lentes Fáquicas', total: 2200, goal: 150, color: '#6366f1', icon: 'award' },
                { label: 'Viscoelásticos', total: 38000, goal: 3500, color: '#10b981', icon: 'package' }
            ];

            const rappelScale = [
                { limit: 250000, rate: 0.015 },
                { limit: 500000, rate: 0.02 },
                { limit: 750000, rate: 0.025 },
                { limit: 1000000, rate: 0.03 },
                { limit: 1250000, rate: 0.035 },
                { limit: 1500000, rate: 0.04 },
                { limit: 1750000, rate: 0.045 },
                { limit: 2000000, rate: 0.05 },
            ];

            const products = [
                { cat: 'Premium', name: 'OPTIFLEX TRIO 3FLA6', priceInnova: 385, desc: 'Trifocal' },
                { cat: 'Premium', name: 'OPTIFLEX TRIO TORICA', priceInnova: 570, desc: 'Trifocal Tórica' },
                { cat: 'EDOF', name: 'EYECRYL SERT', priceInnova: 250.75, desc: 'EDOF' },
                { cat: 'Fáquicas', name: 'EYECRYL PHAKIC', priceInnova: 625, desc: 'Baja Potencia' },
                { cat: 'Fáquicas', name: 'EYECRYL PHAKIC TORIC', priceInnova: 950, desc: 'Tórica' },
                { cat: 'Visco', name: 'BIO-HYALUR 1%', priceInnova: 12, desc: 'Hialuronato 1ml' },
                { cat: 'Visco', name: 'BIO-HYALUR PLUS 1.4%', priceInnova: 13, desc: 'Hialuronato Plus' },
                { cat: 'Visco', name: 'BIO-HYALUR DUO', priceInnova: 22.95, desc: 'Dúo Cohesivo' }
            ];

            const currentRappel = useMemo(() => {
                const level = [...rappelScale].reverse().find(r => simulatedSales >= r.limit);
                return level ? level : { limit: 0, rate: 0 };
            }, [simulatedSales]);

            const rappelAmount = simulatedSales * currentRappel.rate;

            return (
                <div className="max-w-7xl mx-auto p-4 md:p-8">
                    {/* Header */}
                    <div className="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
                        <div>
                            <h1 className="text-3xl font-bold text-slate-800">Innova Ocular 2026</h1>
                            <p className="text-slate-500">Dashboard de Planificación Biotech</p>
                        </div>
                        <div className="flex bg-white p-1 rounded-xl shadow-sm border border-slate-200">
                            {['overview', 'catalog', 'rappel'].map(tab => (
                                <button 
                                    key={tab}
                                    onClick={() => setActiveTab(tab)}
                                    className={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${activeTab === tab ? 'bg-blue-600 text-white shadow-md' : 'text-slate-600 hover:bg-slate-50'}`}
                                >
                                    {tab === 'overview' ? 'Resumen' : tab === 'catalog' ? 'Tarifario' : 'Rappel'}
                                </button>
                            ))}
                        </div>
                    </div>

                    {activeTab === 'overview' && (
                        <div className="space-y-8">
                            {/* KPIs */}
                            <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
                                {objectives.map((obj, i) => (
                                    <div key={i} className="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between">
                                        <div>
                                            <p className="text-sm font-medium text-slate-500">{obj.label}</p>
                                            <h3 className="text-2xl font-bold mt-1">{obj.goal} <span className="text-sm font-normal text-slate-400">uds</span></h3>
                                        </div>
                                        <div className="p-3 rounded-xl bg-blue-50 text-blue-600">
                                            <Icon name={obj.icon} />
                                        </div>
                                    </div>
                                ))}
                            </div>

                            {/* Chart */}
                            <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
                                <h3 className="font-bold text-lg mb-6 flex items-center gap-2">
                                    <Icon name="trending-up" size={18} className="text-blue-600" />
                                    Potencial de Captura vs Total Grupo
                                </h3>
                                <div className="h-80 w-full">
                                    <ResponsiveContainer>
                                        <BarChart data={objectives} layout="vertical" margin={{ left: 40, right: 40 }}>
                                            <CartesianGrid strokeDasharray="3 3" horizontal={true} vertical={false} stroke="#f1f5f9" />
                                            <XAxis type="number" hide />
                                            <YAxis dataKey="label" type="category" width={140} tick={{fontSize: 12, fontWeight: 500}} />
                                            <Tooltip cursor={{fill: '#f8fafc'}} />
                                            <Bar dataKey="total" fill="#e2e8f0" radius={[0, 4, 4, 0]} name="Volumen Total Grupo" />
                                            <Bar dataKey="goal" fill="#3b82f6" radius={[0, 4, 4, 0]} name="Nuestro Objetivo 2026" />
                                        </BarChart>
                                    </ResponsiveContainer>
                                </div>
                                <div className="mt-6 p-4 bg-amber-50 rounded-xl border border-amber-100 flex gap-3">
                                    <Icon name="alert-circle" className="text-amber-600 shrink-0" />
                                    <p className="text-sm text-amber-800 leading-relaxed">
                                        <strong>Estrategia 2026:</strong> Objetivo ajustado al 10% del volumen del grupo. Se priorizan clínicas secundarias debido a la exclusividad de la competencia en el centro insignia.
                                    </p>
                                </div>
                            </div>
                        </div>
                    )}

                    {activeTab === 'catalog' && (
                        <div className="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                            <table className="w-full text-left">
                                <thead className="bg-slate-50 border-b border-slate-100">
                                    <tr>
                                        <th className="p-4 text-xs font-bold text-slate-500 uppercase">Producto</th>
                                        <th className="p-4 text-xs font-bold text-slate-500 uppercase">Categoría</th>
                                        <th className="p-4 text-xs font-bold text-slate-500 uppercase text-right">Precio Innova (€)</th>
                                    </tr>
                                </thead>
                                <tbody className="divide-y divide-slate-100">
                                    {products.map((p, i) => (
                                        <tr key={i} className="hover:bg-slate-50 transition-colors text-sm">
                                            <td className="p-4 font-semibold text-slate-800">{p.name}</td>
                                            <td className="p-4 text-slate-500">{p.cat} - {p.desc}</td>
                                            <td className="p-4 text-right font-bold text-blue-700">{p.priceInnova.toFixed(2)} €</td>
                                        </tr>
                                    ))}
                                </tbody>
                            </table>
                        </div>
                    )}

                    {activeTab === 'rappel' && (
                        <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                            <div className="bg-white p-6 rounded-2xl border border-slate-100">
                                <h3 className="font-bold text-lg mb-6">Escalado Rappel Grupo</h3>
                                <div className="space-y-2">
                                    {rappelScale.map((r, i) => (
                                        <div key={i} className={`p-4 rounded-xl flex justify-between items-center border ${simulatedSales >= r.limit ? 'bg-emerald-50 border-emerald-200 text-emerald-800' : 'bg-white border-slate-100 text-slate-400'}`}>
                                            <span className="text-sm font-medium">≥ {r.limit.toLocaleString()} €</span>
                                            <span className="font-bold">{(r.rate * 100).toFixed(1)}%</span>
                                        </div>
                                    ))}
                                </div>
                            </div>
                            <div className="space-y-6">
                                <div className="bg-slate-900 p-8 rounded-2xl text-white shadow-xl">
                                    <p className="text-slate-400 text-sm font-medium mb-1">Simulación de Facturación</p>
                                    <h2 className="text-4xl font-bold mb-6">{simulatedSales.toLocaleString()} €</h2>
                                    <input 
                                        type="range" min="100000" max="2500000" step="50000" 
                                        value={simulatedSales} onChange={(e) => setSimulatedSales(Number(e.target.value))}
                                        class="w-full h-2 bg-slate-700 rounded-lg appearance-none cursor-pointer accent-blue-500"
                                    />
                                    <div className="mt-8 pt-6 border-t border-slate-800 flex justify-between items-end">
                                        <div>
                                            <p className="text-slate-400 text-xs uppercase tracking-wider font-bold">Rappel Devuelto</p>
                                            <p className="text-3xl font-bold text-emerald-400 mt-1">{rappelAmount.toLocaleString()} €</p>
                                        </div>
                                        <div className="text-right">
                                            <p className="text-slate-400 text-xs">Porcentaje Aplicado</p>
                                            <p className="text-xl font-bold text-blue-400">{(currentRappel.rate * 100).toFixed(1)}%</p>
                                        </div>
                                    </div>
                                </div>
                                <div className="bg-blue-50 p-6 rounded-2xl border border-blue-100 flex gap-4">
                                    <Icon name="info" className="text-blue-600 shrink-0" />
                                    <div>
                                        <p className="text-sm font-bold text-blue-900">Nota de Acuerdo Especial</p>
                                        <p className="text-xs text-blue-700 mt-1 italic">"Adicionalmente se aplicará un rappel por cuenta individual de hasta el 5,50% si el centro supera los 150.000 € anuales."</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    )}
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
